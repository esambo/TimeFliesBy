<% title 'Tasks' -%>

<style type="text/css">
    .rightSpace {padding-right: 1.5em;}  
</style>
<table>
  <tr>
    <th>Title</th>
    <th>Duration</th>
    <th>Start</th>
    <th>Stop</th>
    <th>Description</th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="vevent">
    <td class="rightSpace summary"><%= task.title %></td>
    <td class="rightSpace duration">
      <span class="value-title" title="<%= Duration.new(task.duration).iso8601 %>"> </span>
      <%= ChronicDuration.output task.duration, :format => :short %>
    </td>
    <td class="rightSpace dtstart">
      <span class="value-title" title="<%= task.start.iso8601 %>"> </span>
      <%= l(task.start, :format => :nice) %>
    </td>
    <td class="rightSpace dtend">
      <span class="value-title" title="<%= task.stop.iso8601 %>"> </span>
      <%= l(task.stop,  :format => :nice) %>
    </td>
    <td class="rightSpace description"><%= task.description %></td>
    <td><%= link_to 'Show', task, :class => 'url' %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
