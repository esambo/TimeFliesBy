<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <% @tags.each do |tag| %>
      <label>
        <%= check_box_tag 'task[tag_ids][]', tag.id, @task.tags.include?(tag) %>
        <%= tag.name %><br />
      </label>
    <% end %>
    <%= hidden_field_tag 'task[tag_ids][]' %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%#= f.datetime_select :start %>
    <%#= f.text_field :start #Can't seem to find value! %>
    <%= text_field_tag 'task[start]', human_datetime(@task.start), :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :stop %><br />
    <%#= f.datetime_select :stop %>
    <%#= f.text_field :stop #Can't seem to find value! %>
    <%= text_field_tag 'task[stop]', human_datetime(@task.stop), :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <% if @task.new_record? %>
      <br />
      <%= f.submit 'Switch' %>
    <% end %>
  </div>
<% end %>
